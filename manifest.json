{
  "name": "DevScreen",
  "description": "Designed for Web Developers with customized search engines and Daily Posts from Top Dev Blogs",
  "manifest_version": 2,
  "version": "1.0.0",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": ["https://quiet-bayou-45541.herokuapp.com/"],
  "icons": {"128": "icon_128.png"},
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}